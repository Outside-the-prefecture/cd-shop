<div class="body">
	<div class="container">
		<p class="itiran">いいねランキング</p>
		<div class="col-md-12">
			<div class="row">
				<% @all_ranks.each do |product| %>
				<% @all_rank = @all_rank+1 %>
				<div class="col-md-3">
					<% if @all_rank==1 %>
					<i class="fas fa-crown first"><span class="crown-text"></span></i>
					<% elsif @all_rank==2 %>
					<i class="fas fa-crown second"><span class="crown-text"></span></i>
					<% elsif @all_rank==3 %>
					<i class="fas fa-crown third"><span class="crown-text"></span></i>
					<% else %>
					<%= @all_rank %>
					<% end %>
					<%= link_to product_path(product.id) do %>
					<%= attachment_image_tag product, :jacket_image, :fill, 250,250, fallback: "",size: "100*100" %><br/>
					<p class="linkborder"><%= product.artist.name %>/&nbsp;&nbsp;<%= product.name %></p>
					<p class="kakaku linkborder">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>￥<%= converting_to_jpy(product.price) %></strong>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= paginate @products %>

