<div class="body">
	<div class="container">
		<p class="jii">人気商品</p>
		<div class="col-md-12">
			<div class="row">
				<% @all_ranks.each do |product| %>
				<% @all_rank = @all_rank+1 %>
				<div class="col-md-2">
					<% if @all_rank==1 %>
					<i class="fas fa-crown first"></i>
					<%= @all_rank %>
					<% elsif @all_rank==2 %>
					<i class="fas fa-crown second"></i>
					<%= @all_rank %>
					<% elsif @all_rank==3 %>
					<i class="fas fa-crown third"><span class="crown-text"></span></i>
					<% else %>
					<%= @all_rank %>
					<% end %>
					<br>
					<%= link_to product_path(product.id) do %>
					<%= attachment_image_tag product, :jacket_image, :fill, 110,110, fallback: "",size: "100*100" %><br/>
					<p class="linkborder"><%= product.artist.name %>/&nbsp;&nbsp;<%= product.name.truncate(10)  %></p>
					<p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong class="linkborder">￥<%= converting_to_jpy(product.price) %></strong><br/>
					<p class="linkborder"><%= product.status %></p>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= paginate @products %>

