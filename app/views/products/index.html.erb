<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-md-2">
           <%= attachment_image_tag product, :jacket_image, fallback: "",size: "100*100" %>
            <%= product.name %>
            <%= product.price %>
          </div>
          <div class="col-md-1">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
