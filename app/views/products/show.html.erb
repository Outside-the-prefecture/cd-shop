<div class="body">
<!--   <link rel="stylesheet" href="stylesheets.scss"> -->
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div>
          <%= attachment_image_tag @product, :jacket_image, :fill, 100, 100, format: 'jpeg', size: '300x300', fallback: "no_image.jpg" %>
        </div>
          <div id="likes_buttons_<%= @product.id %>">
          <%= render partial: 'favorites/favorite', locals: { product: @product} %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="col-md-6">
          <div class="row">
          <table class="product-table col-md-10 col-md-offset-1">
            <tr>
              <th>商品名</th>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <th>アーティスト</th>
              <td><%= @product.artist.name %></td>
            </tr>
            <tr>
              <th>発売日</th>
              <td><%= @product.release_date %></td>
            </tr>
            <tr>
              <th>在庫数</th>
              <td>
                <% @arrivals.each do |arrival| %>
                <% @count+=arrival.count %>
                <% end %>
                <% @orderitems.each do |orderitem| %>
                <% @number+=orderitem.number %>
                <% end %>
                <%= @count-@number %>
              </td>
            </tr>
            <tr>
              <th>価格</th>
              <td><%= @product.price %></td>
            </tr>
            <tr>
             <th>送料</th>
             <td>500円</td>
           </tr>
          <tr>
            <th>レコード会社</th>
            <td><%= @product.label.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @product.genre.name %></td>
          </tr>
        </table>
      </div>
      <div class="row">
        <table class="disc-table col-md-10 col-md-offset-1">
          <% @discs.each do |disc| %>
          <tr>
            <th><%= disc.name %></th>
          </tr>
          <% disc.songs.each do |song| %>
          <tr>
            <td><%= song.name %></td>
          </tr>
          <% end %>
          <% end %>
        </table>
      </div>
        <%= form_for(@cartitem , url: user_cart_items_path(current_user) )  do |f| %>
        <div class="row product-cart">
        <%= f.number_field :count ,class: "col-md-10 col-md-offset-1" %>
      </div>
        <%= f.hidden_field :product, :value => @product.id %>
        <div class="row">
        <%= f.submit "カートに入れる", class: "btn btn-sm btn-primary col-md-10 col-md-offset-1" %>
      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



