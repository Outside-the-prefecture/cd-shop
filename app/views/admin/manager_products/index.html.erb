<div class="body">
  <div class="container">
    <div class="row">
      <p class= "itiran" >商品一覧</p>
      <div class="col-md-12">
        <div class="row">
          <% @products.each do |product| %>
          <div class="col-md-3">
              <%= link_to  admin_manager_product_path(product.id), {class: "linkborder"} do %>
              <%= attachment_image_tag product, :jacket_image, :fill, 250,250, fallback: "",size: "100*100" %><br/>
              <%= product.artist.name %>/&nbsp;&nbsp;<%= product.name %><br/>
               <p class="sutetas"><button type="button" class="btn btn-info">販売ステータス</button>&nbsp;&nbsp;<%= product.status %></p>
               <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong><%= converting_to_jpy(product.price) %></strong><br/>
                <strong>在庫数</strong>&nbsp;&nbsp;&nbsp;&nbsp;
                <% count = 0 %>
                <% number = 0 %>
                <% product.arrivals.each do |arrival| %>
                  <% count+=arrival.count %>
                <% end %>
                <% product.order_items.each do |orderitem| %>
                  <% number+=orderitem.number %>
                <% end %>
                <%= count-number %>
              <% end %>

            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @products %>
  </div>


