<div class="body">
  <div class="container">
    <div class="row">
      <p class= "itiran" >商品一覧</p>
      <div class="col-md-12">
        <div class="row">
          <% @products.each do |product| %>
          <div class="col-md-3">
              <%= link_to  admin_manager_product_path(product.id), {class: "linkborder"} do %>
              <%= attachment_image_tag product, :jacket_image, :fill, 250,250, fallback: "",size: "100*100" %><br/>
              <%= product.artist.name %>/&nbsp;&nbsp;<%= product.name %><br/>
               <p class="zaiko"><strong>在庫数</strong></p>
               <p class="sutetas"><strong>ステータス</strong></p>
               <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong><%= converting_to_jpy(product.price) %></strong>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @products %>
  </div>