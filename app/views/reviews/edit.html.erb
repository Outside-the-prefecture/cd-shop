    <div class="body review-edit">
      <h2 class="review-edit-head">レビュー編集</h2>
    <%= form_for @review,url: product_review_path(product_id: @product.id,id: @review.id) do |f| %>
        <label>コメント</label>
        <div class="row">
          <%= f.text_field :content,class: "col-md-8 col-md-offset-1 arrival-text" %><br/>
        </div>
        <label>表示ユーザ名</label>
        <div class="row">
          <%= f.text_field :name,class: "col-md-8 col-md-offset-1 arrival-count" %><br/>
        </div>
        <div class="row">
          <%= f.submit "編集完了",class: "btn btn-success col-md-8 col-md-offset-1 arrival" %><br/>
        </div>
    <% end %>
  </div>