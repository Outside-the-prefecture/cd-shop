<div class="body">
	<div class="bobo">
		<div class ="cart">
			<h1>お気に入り商品&ensp;&nbsp; <i class="fas fa-star"></i></h1>
		</div>
		<div class="container">
			<div class="row">
				<table class="table-striped col-md-12">
					<thead>
						<tr>
							<th></th>
							<th>お気に入り商品</th>
							<th>価格</th>
						</tr>
					</thead>
					<tbody>
						<% @favorites.each do |favorite| %>
						<tr>
							<td class="cd"><i class="fas fa-compact-disc fa-spin"></i></td>
							<td class="moji"><%= link_to favorite.product.name,product_path(favorite.product.id) %></td>
							<td class="moji">￥<%= converting_to_jpy(favorite.product.price) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>