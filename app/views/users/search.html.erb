<div class="body">
    <% if @artist_or_genre_or_song_or_product=="1" %>
        <% if @artists.count==0 %>
            <h2>その歌手は登録されていません。</h2>
        <% else %>
            <% @artists.each do |artist| %>
                <h4 class="hit"><%= "#{artist.products.count}件の検索結果"%></h4>
                <h1>artist</h1>
                <% if artist.products.count==0 %>
                    <%= "#{artist.name}の商品は取り扱っておりません。" %>
                <% else %>
                    <div class="container">
                        <div class="row">
                            <h4><%= "#{artist.name}" %>
                            <div class="col-md-12">
                                <div class="row">
                                    <% artist.products.each do |product| %>
                                    <div class="col-md-2">
                                        <%= link_to product_path(product.id) do %>
                                        <%= attachment_image_tag product, :jacket_image, :fill, 110,110, fallback: "",size: "100*100" %><br/>
                                        <p class="link"><%= product.name.truncate(8) %></p>
                                        <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>￥<%= converting_to_jpy(product.price) %></strong><br/>
                                        <p class="linkborder"><%= product.status %></p>
                                        <% end %>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>

    <% elsif @artist_or_genre_or_song_or_product=="2" %>
        <% if @genres.count==0 %>
            <h2>そのジャンルはありません</h2>
        <% else %>
            <% @genres.each do |genre| %>
                <h4 class="hit"><%= "#{genre.products.count}件の検索結果"%></h4>
                <h2>genre</h2>
                <% if genre.products.count==0 %>
                        <%= "#{genre.name}の商品は取り扱っておりません。" %>
                <% else %>
                    <div class="container">
                        <div class="row">
                            <h4><%= "#{genre.name}" %>
                            <div class="col-md-12">
                                <div class="row">
                                    <% genre.products.each do |product| %>
                                    <div class="col-md-2">
                                        <%= link_to product_path(product.id) do %>
                                        <%= attachment_image_tag product, :jacket_image, :fill, 110,110, fallback: "",size: "100*100" %><br/>
                                        <p class="link"><%= product.artist.name %>/&nbsp;&nbsp;<%= product.name.truncate(8) %></p>
                                        <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>￥<%= converting_to_jpy(product.price) %></strong><br/>
                                        <p class="linkborder"><%= product.status %></p>
                                        <% end %>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>

    <% elsif @artist_or_genre_or_song_or_product=="3" %>
        <h4 class="hit"><%= "#{@songs.count}件の検索結果"%></h4>
        <h2>song</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <% @songs.each do |song| %>
                                    <div class="col-md-2">
                                        <%= link_to product_path(song.disc.product.id) do %>
                                        <%= attachment_image_tag song.disc.product, :jacket_image, :fill, 110,110, fallback: "",size: "100*100" %><br/>
                                        <p class="link"><%= song.disc.product.artist.name %>/&nbsp;&nbsp;<%= song.disc.product.name.truncate(8) %></p>
                                        <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>￥<%= converting_to_jpy(song.disc.product.price) %></strong><br/>
                                        <p class="linkborder"><%= song.disc.product.status %></p>
                                        <% end %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>

    <% else %>
        <h4 class="hit"><%= "#{@products.count}件の検索結果"%></h4>
        <h2>product</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <% @products.each do |product| %>
                                    <div class="col-md-2">
                                        <%= link_to product_path(product.id) do %>
                                        <%= attachment_image_tag product, :jacket_image, :fill, 110,110, fallback: "",size: "100*100" %><br/>
                                        <p class="link"><%= product.artist.name %>/&nbsp;&nbsp;<%= product.name.truncate(8) %></p>
                                        <p class="kakaku">価格</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>￥<%= converting_to_jpy(product.price) %></strong><br/>
                                        <p class="linkborder"><%= product.status %></p>
                                        <% end %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
    <% end %>
</div>