<div class="baby">
	<h1>マイページ</h1>
	<div class="user-info-heading">
		<h3>ユーザー情報</h3>
	</div>

	<div class="user-info">
		<p class="user-name">
			<label>名前&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;：</label>
			<%= @user.last_name %><%= @user.first_name %>
		</p>
		<p class="user-address">
			<label>住所&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;：</label>
			<%= @user.address %>
		</p>
		<% @addresses.each do |address| %>
		<p class="user-address-other">
			　&ensp;<%= address.address %>
		</p>
		<% end %>
		<p class="user-post">
			<label>郵便番号&ensp;&ensp;&ensp;&ensp;&ensp;&nbsp;&thinsp;：</label>
			<%= @user.postal_code %>
		</p>
		<p class="user-phone">
			<label>電話番号&ensp;&ensp;&ensp;&ensp;&ensp;&nbsp;&thinsp;：</label>
			<%= @user.phone_number %>
		</p>
		<p class="user-mail">
			<label>メールアドレス：</label>
			<%= @user.email %>
		</p>
		<%= link_to edit_user_path(@user),class: "btn btn-warning user-edit" do %>
		<span>プロフィール編集</span>
		<% end %>
		<%= link_to user_path(@user.id),method: :delete, data:{confirm: "本当に退会しますか？"},class: "btn btn-danger user-destroy" do %>
		<span>退会</span>
		<% end %>
	</div>

	<h3>購入履歴</h3>
	<div class="container">
		<div class="row">
			<% @orders.each do |order| %>
			<div class="user-history col-md-4 col-md-offset-1">
				<div class="row">
					<div class="col-md-4 col-md-offset-1">
						<p>購入日時<%= order.created_at.to_s(:datetime_jp) %></p>
						<p>送付先<%= order.delivery_target_address %></p>
						<p>総額<%= order.total_amount %></p>
						<%= link_to "購入詳細",user_history_path(user_id: @user.id , id: order.id) %>
					</div>
					<div class="col-md-4 col-md-offset-1">
						<% order.order_items.each do |order_item| %>
						<%= order_item.product.name %>
						<% end %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<%= paginate @orders %>
</div>


